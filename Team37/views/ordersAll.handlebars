<div>
    <h1 class="title-text">All Orders</h1>
    {{#if ordersLength}}
    <div class="order-list">
        {{#each orders}}
        <div class="order container">
            <a href="/orders/{{this._id}}">
                <h2>Order id: {{this._id}}</h2>
                <div>
                    <h3>User: {{this.user.fname}} {{this.user.lname}} - {{this.user.email}}</h3>
                    <h3>Date Placed: {{this.datePlaced}}</h3>
                    <h3>Status: {{this.status}}</h3>
                </div>
                <div class="order-items">
                    <h4>{{this.numItems}} item(s)</h4>
                    {{#each this.items}}
                    <div class="order-list-item">
                        <a href="/prop/{{this.itemId._id}}">Prop: {{this.itemId.name}}</a>
                        <p>Quantity: {{this.quantity}}</p>
                    </div>
                    {{/each}}
                </div>
            </a>

        </div>
        {{/each}}
    </div>

    {{else}}
    <p class="head-text" style="text-align: center;">There are currently no orders</p>
    {{/if}}
</div>